<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/searchByNameBtn"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_item_height"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/search_by_name"
            app:layout_constraintEnd_toStartOf="@+id/searchSavedBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searchSavedBtn"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_item_height"
            android:text="@string/search_saved"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchByNameBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/locationChooser"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_item_height"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/white"
            android:maxLines="1"
            android:paddingHorizontal="4dp"
            app:layout_constraintEnd_toStartOf="@+id/chooserBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchByNameBtn" />

        <TextView
            android:id="@+id/chooserBtn"
            style="@style/ButtonStyle"
            android:layout_width="@dimen/search_item_height"
            android:layout_height="@dimen/search_item_height"
            android:layout_marginTop="4dp"
            android:text="@string/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchByNameBtn" />

        <Space
            android:id="@+id/space0"
            android:layout_width="match_parent"
            android:layout_height="4dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>