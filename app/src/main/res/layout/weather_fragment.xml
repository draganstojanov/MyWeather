<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="currentResponse"
            type="com.andraganoid.myweather.model.CurrentResponse" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_lite"
        android:fitsSystemWindows="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <EditText
                android:id="@+id/locationChooser"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginEnd="4dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/orange_lite"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                app:layout_constraintEnd_toStartOf="@+id/chooserBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chooserBtn"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/orange_dark"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/locationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:text="@{currentResponse.location.name}"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/locationChooser" />

            <TextView
                android:id="@+id/locationCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:text="@{currentResponse.location.region+`, `+currentResponse.location.country}"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/locationName" />

            <TextView
                android:id="@+id/timeUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:text="@{currentResponse.current.lastUpdated}"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/locationCountry" />

            <Space
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                app:layout_constraintTop_toBottomOf="@id/timeUpdated" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/currentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/current_color"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@id/space1">

                <TextView
                    android:id="@+id/currentTemp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{Math.round(currentResponse.current.tempC)+`\u00B0`}"
                    android:textColor="@color/white"
                    android:textSize="80sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/currentImg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/currentImg"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:layout_constraintBottom_toBottomOf="@id/currentCondition"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/currentTemp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:setImage="@{currentResponse.current.condition.icon}" />

                <TextView
                    android:id="@+id/currentCondition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{currentResponse.current.condition.text}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@id/currentImg"
                    app:layout_constraintStart_toStartOf="@id/currentImg"
                    app:layout_constraintTop_toBottomOf="@id/currentImg" />

                <Space
                    android:id="@+id/space2"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/currentCondition" />

                <TextView
                    android:id="@+id/feelsLikeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Feels like"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/windLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/space2" />

                <TextView
                    android:id="@+id/feelsLike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{Math.round(currentResponse.current.feelsLikeC)+`\u00B0`}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/windValues"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/feelsLikeLabel" />


                <TextView
                    android:id="@+id/windLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Wind"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/feelsLikeLabel"
                    app:layout_constraintTop_toBottomOf="@id/space2" />

                <TextView
                    android:id="@+id/windValues"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{currentResponse.current.windDir+`|`+currentResponse.current.windKph+`|`+currentResponse.current.gustKph}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/feelsLike"
                    app:layout_constraintTop_toBottomOf="@id/windLabel" />

                <Space
                    android:id="@+id/space3"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/windValues" />

                <TextView
                    android:id="@+id/precipitationLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Precipitation"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/pressureLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/space3" />

                <TextView
                    android:id="@+id/precipitation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{``+Math.round(currentResponse.current.precipMm)}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/pressure"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/precipitationLabel" />


                <TextView
                    android:id="@+id/pressureLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pressure"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/humidityLabel"
                    app:layout_constraintStart_toEndOf="@id/precipitationLabel"
                    app:layout_constraintTop_toBottomOf="@id/space3" />

                <TextView
                    android:id="@+id/pressure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{``+Math.round(currentResponse.current.pressureMb)}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/humidity"
                    app:layout_constraintStart_toEndOf="@+id/precipitation"
                    app:layout_constraintTop_toBottomOf="@id/pressureLabel" />

                <TextView
                    android:id="@+id/humidityLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Humidity"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pressureLabel"
                    app:layout_constraintTop_toBottomOf="@id/space3" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{``+currentResponse.current.humidity}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pressure"
                    app:layout_constraintTop_toBottomOf="@id/humidityLabel" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>